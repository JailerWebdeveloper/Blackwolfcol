---
import Cookies from 'js-cookie';
import Layout from "../layouts/Layout.astro";

const getCartFromCookies = () => {
  const cartCookie = Cookies.get('cart');
  if (cartCookie) {
    return JSON.parse(cartCookie);
  } else {
    return [];
  }
};
  
  const cart = getCartFromCookies()
  console.log(cart)
---


<Layout title="Carrito">
    <div class="w-full min-h-screen px-10 py-4 flex">
        <div class=" rounded-2xl border h-full p-4 w-1/2 flex flex-col gap-2">
            <h1 class="uppercase font-extrabold text-4xl antialiased border-b">Tu carrito</h1>
            <ul class="flex flex-col gap-4  h-full overflow-y-auto p-2 ">
                {cart.map((producto)=>{
                    <li class="bg-slate-100 rounded-xl w-full flex">{producto.color}</li>
                })}
                
            </ul>

        </div>

    </div>
</Layout>