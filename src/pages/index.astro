---
import Layout from "../layouts/Layout.astro";
import ProductCard from "../components/ProductCard.astro";
export const prerender = false;

import SubscribeCard from "../components/SubscribeCard.jsx";

import { GetAllProducts } from "../services/GetAllProducts.js";

const data = await GetAllProducts();
---

<Layout title="Blackwolf/Home">
  <main class="w-full h-full flex flex-col">
    <section id="HomeHero" class="w-full h-[90vh] flex flex-col border">
      <div class="hero w-full h-full bg-base-200">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Hello there</h1>
            <p class="py-6">
              Provident cupiditate voluptatem et in. Quaerat fugiat ut assumenda
              excepturi exercitationem quasi. In deleniti eaque aut repudiandae
              et a id nisi.
            </p>
            <button class="btn btn-primary">Get Started</button>
          </div>
        </div>
      </div>
    </section>

    <section
      class="w-full textured md:px-24 px-5 py-20  flex flex-col  justify-center items-center"
    >
      <h1
        class="md:text-6xl  text-4xl font-extrabold mb-10 uppercase antialiased"
      >
        Nueva coleccion
      </h1>
      <div
        class="w-full grid md:grid-cols-4 grid-cols-2  grid-rows-1 "
      >
        {
          data
            .slice(0, 4)
            .map((shirt) => (
              <ProductCard
                id={shirt.id}
                Discount=""
                alt={shirt.Descripcion}
                Image={shirt.Imagen}
                ProductName={shirt.NombreProducto}
                Price={shirt.Precio}
              />
            ))
        }
      </div>

      <a
        href="/Search"
        class="rounded-full mt-10 text-center btn bg-transparent btn-wide link border-2"
        >view more</a
      >
      <div class="divider text-slate-400 mx-auto w-4/5"></div>

    </section>

    <section
      class="w-full textured md:px-24 px-5 py-20  flex flex-col  justify-center items-center"
    >
      <h1
        class="md:text-6xl  mb-10 text-4xl font-extrabold uppercase antialiased"
      >
        Top ventas
      </h1>
      <div
      class="w-full grid md:grid-cols-4 grid-cols-2 grid-rows-1 gap-4"
      >
        {
          data
            .slice(0, 4)
            .map((shirt) => (
              <ProductCard
                id={shirt.id}
                Discount=""
                alt={shirt.Descripcion}
                Image={shirt.Imagen}
                ProductName={shirt.NombreProducto}
                Price={shirt.Precio}
              />
            ))
        }
      </div>

      <a
        href="/Search"
        class="rounded-full text-center mt-10 btn bg-transparent btn-wide link border-2"
        >view more</a
      >
    </section>

    <section
      class="w-full textured md:px-24 px-5 py-20  flex flex-col gap-10 justify-center items-center"
    >
      <h
        class="text-4xl md:text-6xl uppercase font-extrabold antialiased text-center"
        >Categorias</h
      >
      <div
        class="bg-slate-200 rounded-2xl w-full h-[80vh] gap-4 p-10 grid md:grid-rows-2 grid-rows-3 grid-cols-2 md:grid-cols-3"
      >
        <div
          class="col-span-2 relative w-full h-full hover:scale-105 transition-all hover:ring hover:cursor-pointer rounded-2xl"
        >
          <img
            src="https://i.pinimg.com/736x/19/88/9f/19889f3a22ad71425b0ad054a249ad95.jpg"
            alt=""
            class="object-cover w-full h-full rounded-2xl"
          />
          <p
            class="text-white font-extrabold absolute md:top-14 md:left-14 left-10 top-10 z-10 uppercase md:text-6xl"
          >
            Aestetic
          </p>
        </div>
        <div
          class="col-span-1 relative w-full hover:scale-105 transition-all hover:ring hover:cursor-pointer h-full rounded-2xl"
        >
          <img
            src="https://i.pinimg.com/736x/19/88/9f/19889f3a22ad71425b0ad054a249ad95.jpg"
            alt=""
            class="object-cover w-full h-full rounded-2xl"
          />
          <p
            class="text-white font-extrabold absolute md:top-14 md:left-14 left-10 top-10 uppercase md:text-6xl"
          >
            Urban
          </p>
        </div>
        <div
          class="col-span-1 relative w-full hover:scale-105 transition-all hover:ring hover:cursor-pointer h-full rounded-2xl"
        >
          <img
            src="https://i.pinimg.com/736x/19/88/9f/19889f3a22ad71425b0ad054a249ad95.jpg"
            alt=""
            class="object-cover w-full h-full rounded-2xl"
          />
          <p
            class="text-white font-extrabold absolute md:top-14 md:left-14 left-10 top-10 uppercase md:text-6xl"
          >
            Urban
          </p>
        </div>
        <div
          class="col-span-2 relative w-full h-full hover:scale-105 transition-all hover:ring hover:cursor-pointer rounded-2xl"
        >
          <img
            src="https://i.pinimg.com/736x/19/88/9f/19889f3a22ad71425b0ad054a249ad95.jpg"
            alt=""
            class="object-cover w-full h-full rounded-2xl"
          />
          <p
            class="text-white font-extrabold absolute md:top-14 md:left-14 left-10 top-10 uppercase md:text-6xl"
          >
            Aestetic
          </p>
        </div>
      </div>
      <SubscribeCard  client:load/>
    </section>

  </main>
</Layout>
