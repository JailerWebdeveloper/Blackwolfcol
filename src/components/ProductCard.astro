---
interface Props {
 Image:string,
 alt:string,
 Discount:string ,
 ProductName:string,
 Price:number
}
const {Image,Discount,ProductName,alt,Price} = Astro.props
---

<div class=" flex flex-col rounded-xl p-2  items-center justify-center hover:cursor-pointer bg-slate-100 md:h-[450px] hover:ring hover:scale-105  transition-all w-full h-full relative gap-4">
    { Discount ? <div></div> :<div></div>}
    <div class="w-full h-3/5">
    <img src={Image} alt={alt} class="rounded-xl  bg-slate-400 object-cover h-full w-full" />
    </div>
    <div class="w-full h-2/5 flex px-2 flex-col justify-start items-start">
        <p class="font-semibold antialiased text-xl md:text-4xl">{ProductName}</p>
        <div class="rating gap-1 rating-xs md:rating-sm">
            <input type="radio" name="rating-5" class="mask mask-star-2 bg-orange-400" />
            <input type="radio" name="rating-5" class="mask mask-star-2 bg-orange-400" checked />
            <input type="radio" name="rating-5" class="mask mask-star-2 bg-orange-400" />
            <input type="radio" name="rating-5" class="mask mask-star-2 bg-orange-400" />
            <input type="radio" name="rating-5" class="mask mask-star-2 bg-orange-400" />
          </div>
        <p class="font-semibold font-roboto antialiased text-lg md:text-3xl">${Price}</p>
    </div>

</div>