---
interface Props {
  id: string;
  Image: string;
  alt: string;
  Discount: string;
  ProductName: string;
  Price: number;
}
const { Image, id, Discount, ProductName, alt, Price } = Astro.props;
---

<div class="w-full h-full ">
<a  class="" href={id}>
  <div class="flex flex-col gap-2 transition-all hover:cursor-pointer rounded-2xl   hover:ring p-2">
    <div class="w-full md:h-[298px] h-[238px] rounded-2xl border-2 bg-slate-500">
      <img src=`https://backend-wolf-psi.vercel.app/imagen/${Image[0]}` class="md:object-cover object-contain rounded-2xl w-full h-full" alt={alt} />
    </div>
    <p class="ml-2 font-bold antialiased text-[20px] truncate w-4/5 max-h-[200px]">{ProductName}</p>
    <p class="ml-2 font-bold antialiased text-2xl truncate w-4/5 tracking-wide">${Price}</p>
  </div>
</a>
</div>
